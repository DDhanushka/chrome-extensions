{
  "manifest_version": 3,
  "name": "Jot - Todo List",
  "version": "1.0",
  "description": "Your minimalist to-do list for the web. Jot down tasks in a click and clear your mind between tabs.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jot - Todo List"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}